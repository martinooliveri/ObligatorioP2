@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Ingrese e-mail">
                </div>
                <div class="form-group">
                    <label for="contrasenia">Contraseña</label>
                    <input type="password" id="contrasenia" name="contrasenia" class="form-control" placeholder="Ingrese contraseña">
                </div>
                <div>
                    <a asp-controller="Home" asp-action="Registro">Registrarse</a>
                    <br>
                    <br>

                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>

        </div>
    </div>
</div>

<p class="text-center">@ViewBag.Message</p>
